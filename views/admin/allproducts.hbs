<section>
  <div class="container mt-4">
    <div class="row">
      <h3 class="mt-3">All products</h3>
      <a href="/admin/add-products" class="btn btn-primary ml-auto">Add products</a>

    </div>

    <table class="table table table-hover table-striped mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Catagory</th>
          <th scope="col">Price</th>
          <th scope="col">Discribtion</th>
          <th scope="col">Image</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          {{#each products}}
        <tr>
        
          <th scope="row">{{inc @index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.catagory}}</td>
          <td>{{this.price}}</td>
          <td>{{this.discription}}</td>
          <td><img style="width:50px ;height: 50px;" src="/product-image/{{this._id}}.jpg " alt=""></td>
          <td><a href="/admin/delete-products{{this.id}}" class="btn btn-danger">Delete </a></td>
          <td><a href="/admin/edit-products{{this.id}}" class="btn btn-primary">Edit </a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>